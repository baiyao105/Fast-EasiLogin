{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":separateMajorReleases",
    ":automergeMinor",
    ":automergePatch",
    ":ignoreUnstable"
  ],
  "timezone": "Asia/Shanghai",
  "schedule": ["after 8am and before 11pm"],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchManagers": ["pip_requirements"],
      "groupName": "Python",
      "automerge": false
    }
  ],
  "dependencyDashboard": true
}
